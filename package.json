{
  "name": "wiseflow-desktop",
  "version": "1.0.0",
  "description": "WiseFlow Desktop Client - AI-powered information mining",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "python-service": "cd python-backend && python3 wiseflow_service.py",
    "python-install": "cd python-backend && python3 -m pip install -r requirements.txt",
    "dev-full": "concurrently \"npm run python-service\" \"npm start\" \"wait-on http://localhost:3000 && wait-on http://localhost:8080 && electron .\"",
    "setup-python": "cd python-backend && python3 start_service.py --install",
    "pack-all": "npm run build && npm run pack",
    "dist-all": "npm run build && npm run dist",
    "clean": "rm -rf dist build || del /q dist build 2>nul || echo 'Clean completed'",
    "build-python-binary": "cd python-backend && python3 build_binary.py",
    "rebuild-service": "npm run build-python-binary && npm run build",
    "debug-package": "node debug-package.js",
    "fix-package": "node fix-package.js",
    "full-rebuild": "npm run clean && npm run build && npm run pack"
  },
  "build": {
    "appId": "com.wiseflow.desktop",
    "productName": "WiseFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "python-backend/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/logo.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "keywords": [
    "electron",
    "react",
    "wiseflow",
    "ai",
    "information-mining"
  ],
  "author": "WiseFlow Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.6.0",
    "electron": "^22.3.0",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1",
    "web-vitals": "^2.1.4"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "conf": "^14.0.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.263.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
